<div class="login-box" style='padding-top: 50px'>
  <div class="login-logo">
    <a href="../../index2.html"><b>Chat</b>App</a>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Sign up to start your session</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group has-feedback">
        <%= f.text_field :email, required: false, autofocus: true, class: 'form-control', placeholder: 'Enter email...' %>
      </div>
      <div class="form-group has-feedback">
        <%= f.text_field :password, required: false, class: "form-control", placeholder: 'Enter password...' %>
      </div>
      <div class="form-group has-feedback">
        <%= f.text_field :password_confirmation, required: false, class: "form-control", placeholder: 'Reenter password...' %>
      </div>
      <div class="form-group has-feedback">
        <%= f.submit "Sign up", class: "btn btn-primary pull-right"  %>
      </div>
    <% end %>

    <%= link_to "Already have a membership?", new_session_path(resource_name) %>

  </div>
  <!-- /.login-box-body -->
</div>
<!-- /.login-box -->
