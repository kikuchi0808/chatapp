<div class='col-md-3 col-lg-2'>
  <!-- Profile Image -->
  <%= link_to employee_path(id: employee.id), class: 'btn-block' do %>
    <div class='box box-primary'>
      <div class='box-body box-profile'>
        <%= render 'employee_thumbnail', employee: employee, class_name: 'profile-user-img' %>
        <h3 class='profile-username text-center no-wrap-scroll'><%= employee.name %></h3>
        <p class='text-muted text-center no-wrap-scroll'><%= employee.department.name %></p>
        <% if false %>
          <ul class='list-group list-group-unbordered'>
            <li class='list-group-item'>
              <b>従業員ID</b> <a class='pull-right'>1,322</a>
            </li>
          </ul>
          <a href='#' class='btn btn-primary btn-block'><b>詳細</b></a>
        <% end %>
      </div>
      <!-- /.box-body -->
    </div>
  <% end %>
  <!-- /.box -->
</div>