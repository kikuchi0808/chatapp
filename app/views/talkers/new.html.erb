<div class="login-box" style='padding-top: 50px'>
  <div class="login-logo">
    <a href="../../index2.html"><b>Chat</b>App</a>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Welcome back <%= current_user.email %>! <br>Register your account information.</p>

    <%= form_for @talker do |f| %>
      <div class="form-group has-feedback">
        <%= f.text_field :name, required: false, autofocus: true, class: 'form-control', placeholder: 'Enter name...' %>
      </div>
      <div class="form-group has-feedback">
        <%= f.text_field :username, required: false, class: "form-control", placeholder: 'Enter username...' %>
      </div>
      <div class="form-group has-feedback">
        <%= f.submit "Confirm", class: "btn btn-primary pull-right"  %>
      </div>
    <% end %>

  </div>
  <!-- /.login-box-body -->
</div>
<!-- /.login-box -->
