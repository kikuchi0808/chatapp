<div class='wrapper'>
  <!-- Main Header -->
  <%= render 'commons/header' %>
  <!-- Left side column. contains the logo and sidebar -->
  <%= render 'commons/sidebar' %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
        <li class="active">Here</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Your Page Content Here -->
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">ユーザー編集</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <%= form_for @talker do |f| %>
              <div class="box-body">
                <div class="form-group">
                  <%= f.label :name %>
                  <%= f.text_field :name, class: "form-control", id: "exampleInputEmail1",  placeholder:"Enter name.." %>
                </div>
                <div class="form-group">
                  <%= f.label :username %>
                  <%= f.text_field :username, class: "form-control", id: "exampleInputEmail1",  placeholder:"Enter username.." %>
                </div>
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <%= f.submit "保存", class: "btn btn-primary"%>
              </div>
            <% end %>
          </div>
          <!-- /.box -->
        </div>
      </div>
      <!-- /.row -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <!-- Main Footer -->
  <footer class="main-footer">
    <!-- To the right -->
    <div class="pull-right hidden-xs">
      Anything you want
    </div>
    <!-- Default to the left -->
    <strong>Copyright &copy; 2016 <a href="#">Company</a>.</strong> All rights reserved.
  </footer>
  <!-- Add the sidebar's background. This div must be placed
       immediately after the control sidebar -->
</div>
